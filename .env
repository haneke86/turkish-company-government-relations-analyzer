# Application Configuration
PORT=3000
NODE_ENV=development

# API Keys for External Services
FIRECRAWL_API_KEY=your-firecrawl-api-key-here
FIRECRAWL_API_URL=https://api.firecrawl.dev/v1

# Elasticsearch (Full-Text Search MCP Server)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Vector Search (Qdrant MCP Server)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# Neo4j (ATLAS MCP Server) 
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# LLM Integration - Set at least one
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Logging Configuration
LOG_LEVEL=info

# Data Storage Paths
DATA_DIR=./data

# Turkish News API Access
HURRIYET_API_KEY=your-hurriyet-api-key
MILLIYET_API_KEY=your-milliyet-api-key
CUMHURIYET_API_KEY=your-cumhuriyet-api-key
SABAH_API_KEY=your-sabah-api-key
HABERTURK_API_KEY=your-haberturk-api-key

# Proxy Configuration (Optional - for web scraping)
USE_PROXY=false
PROXY_HOST=your-proxy-host
PROXY_PORT=your-proxy-port
PROXY_USERNAME=your-proxy-username
PROXY_PASSWORD=your-proxy-password

# Security Settings
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
